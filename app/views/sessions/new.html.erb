<div class="auth-container">
  <div class="auth-wrapper">
    <!-- Logo/Brand -->
    <div class="auth-header">
      <div class="auth-brand">
        <%= lucide_icon "clock", size: 32, class: "auth-brand-icon" %>
        <h1 class="auth-brand-text">HourBench</h1>
      </div>
      <p class="auth-subtitle">Time Tracking CRM</p>
    </div>

    <!-- Login Card -->
    <div class="auth-card">
      <div class="text-center mb-xl">
        <h2 class="text-3xl font-semibold text-primary m-0">Welcome back</h2>
        <p class="mt-xs text-secondary">Sign in to your account</p>
      </div>

      <%= form_with url: session_url, local: true, class: "auth-form" do |form| %>
        <div class="form-group">
          <label class="form-label">Email Address</label>
          <%= form.email_field :email_address,
              required: true,
              autofocus: true,
              autocomplete: "username",
              placeholder: "Enter your email address",
              value: params[:email_address] %>
        </div>

        <div class="form-group">
          <label class="form-label">Password</label>
          <%= form.password_field :password,
              required: true,
              autocomplete: "current-password",
              placeholder: "Enter your password",
              maxlength: 72 %>
        </div>

        <div class="auth-actions">
          <%= form.submit "Sign in", class: "btn btn-primary auth-submit" %>

          <div class="text-center">
            <%= link_to "Forgot password?", new_password_path, class: "auth-link" %>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Demo Quick Login Section -->
    <% unless ENV['SHOW_TEST_CREDENTIALS'] == 'false' %>
      <div class="quick-login-section">
        <div class="quick-login-header">
          <h3 class="quick-login-title">
            <%= lucide_icon "users", size: 20 %>
            Demo Accounts
          </h3>
          <p class="quick-login-description">For demonstration purposes only - Click any account to login instantly</p>
        </div>

        <div class="quick-login-groups">
          <!-- System Admin -->
          <div class="quick-login-group">
            <h4 class="quick-login-group-title admin">
              <%= lucide_icon "shield", size: 16 %>
              System Admin
            </h4>
            <button onclick="quickLogin('admin@hourbench.com', 'password123')"
                    class="quick-login-btn admin btn-full">
              Login as System Admin
            </button>
          </div>

          <!-- Organization Admins -->
          <div class="quick-login-group">
            <h4 class="quick-login-group-title org-admin">
              <%= lucide_icon "building", size: 16 %>
              Organization Admins
            </h4>
            <div class="quick-login-user-grid">
              <button onclick="quickLogin('alice.johnson@techsolutions.com', 'password123')"
                      class="quick-login-user-btn org-admin">
                Alice (TechSolutions)
              </button>
              <button onclick="quickLogin('luna.rodriguez@creative.com', 'password123')"
                      class="quick-login-user-btn org-admin">
                Luna (Creative)
              </button>
              <button onclick="quickLogin('victor.chang@startup.com', 'password123')"
                      class="quick-login-user-btn org-admin">
                Victor (StartupCorp)
              </button>
            </div>
          </div>

          <!-- Team Admins -->
          <div class="quick-login-group">
            <h4 class="quick-login-group-title team-admin">
              <%= lucide_icon "users", size: 16 %>
              Team Admins
            </h4>
            <div class="quick-login-user-grid">
              <button onclick="quickLogin('david.brown@techsolutions.com', 'password123')"
                      class="quick-login-user-btn team-admin">
                David (Dev Team)
              </button>
              <button onclick="quickLogin('oscar.kim@creative.com', 'password123')"
                      class="quick-login-user-btn team-admin">
                Oscar (Design Team)
              </button>
              <button onclick="quickLogin('xavier.bell@startup.com', 'password123')"
                      class="quick-login-user-btn team-admin">
                Xavier (Product Team)
              </button>
            </div>
          </div>

          <!-- Regular Users -->
          <div class="quick-login-group">
            <h4 class="quick-login-group-title regular">
              <%= lucide_icon "user", size: 16 %>
              Regular Users
            </h4>
            <div class="quick-login-user-grid">
              <button onclick="quickLogin('grace.lee@techsolutions.com', 'password123')"
                      class="quick-login-user-btn regular">
                Grace (TechSolutions)
              </button>
              <button onclick="quickLogin('ruby.white@creative.com', 'password123')"
                      class="quick-login-user-btn regular">
                Ruby (Creative)
              </button>
              <button onclick="quickLogin('zoe.clark@startup.com', 'password123')"
                      class="quick-login-user-btn regular">
                Zoe (StartupCorp)
              </button>
            </div>
          </div>

          <!-- Freelancers -->
          <div class="quick-login-group">
            <h4 class="quick-login-group-title freelancer">
              <%= lucide_icon "briefcase", size: 16 %>
              Freelancers
            </h4>
            <div class="quick-login-user-grid">
              <button onclick="quickLogin('blake.freeman@freelance.com', 'password123')"
                      class="quick-login-user-btn freelancer">
                Blake Freeman
              </button>
              <button onclick="quickLogin('casey.jordan@freelance.com', 'password123')"
                      class="quick-login-user-btn freelancer">
                Casey Jordan
              </button>
            </div>
          </div>
        </div>
      </div>

      <script>
        function quickLogin(email, password) {
          // Fill the form fields
          const emailField = document.querySelector('input[name="email_address"]');
          const passwordField = document.querySelector('input[name="password"]');
          const form = document.querySelector('form');

          if (emailField && passwordField && form) {
            emailField.value = email;
            passwordField.value = password;

            // Add a small delay to ensure fields are populated before submission
            setTimeout(() => {
              form.submit();
            }, 100);
          }
        }
      </script>
    <% end %>

    <!-- Footer -->
    <div style="text-align: center; margin-top: 2rem;">
      <p style="color: var(--color-text-tertiary); font-size: 0.875rem;">&copy; 2024 HourBench - Time Tracking CRM</p>
    </div>
  </div>
</div>
