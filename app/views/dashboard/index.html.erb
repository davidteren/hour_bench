<div class="dashboard-container">
  <!-- Header -->
  <div class="dashboard-header">
    <h1 class="dashboard-title">Dashboard</h1>
    <p class="dashboard-subtitle">
      Welcome back, <%= @current_user.display_name %>!
      <span class="status-indicator status-active">
        <%= @current_user.role_name %>
      </span>
    </p>
  </div>

  <!-- Stats Cards -->
  <div class="dashboard-stats">
    <% @stats.each do |key, value| %>
      <div class="dashboard-stat-card">
        <div class="dashboard-stat-content">
          <div class="dashboard-stat-icon">
            <%= lucide_icon stat_icon_name(key), size: 24, class: "text-white" %>
          </div>
          <div class="dashboard-stat-info">
            <div class="dashboard-stat-label">
              <%= key.to_s.humanize %>
            </div>
            <div class="dashboard-stat-value">
              <%= format_stat_value(key, value) %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="dashboard-grid">
    <!-- Quick Actions -->
    <div class="dashboard-card">
      <div class="dashboard-card-header">
        <h3 class="dashboard-card-title">Quick Actions</h3>
      </div>
      <div class="quick-actions">
        <% if @running_timer %>
          <div class="running-timer">
            <div class="running-timer-header">
              <div class="running-timer-info">
                <h4 class="running-timer-title">Timer Running</h4>
                <p class="running-timer-project">
                  <%= @running_timer.project.name %> - <%= @running_timer.description %>
                </p>
                <p class="running-timer-time">
                  Started: <%= time_ago_in_words(@running_timer.start_time) %> ago
                </p>
              </div>
              <%= link_to "Stop Timer", stop_timer_time_log_path(@running_timer),
                  method: :patch,
                  class: "btn btn-error",
                  data: { turbo_method: :patch } %>
            </div>
          </div>
        <% else %>
          <%= link_to new_time_log_path, class: "btn btn-primary btn-full" do %>
            <%= lucide_icon "play", size: 16 %>
            Start New Timer
          <% end %>
        <% end %>

        <%= link_to time_logs_path, class: "btn btn-secondary btn-full" do %>
          <%= lucide_icon "clock", size: 16 %>
          View All Time Logs
        <% end %>

        <%= link_to projects_path, class: "btn btn-secondary btn-full" do %>
          <%= lucide_icon "clipboard-list", size: 16 %>
          Browse Projects
        <% end %>

        <%= link_to reports_path, class: "btn btn-secondary btn-full" do %>
          <%= lucide_icon "bar-chart-3", size: 16 %>
          View Reports
        <% end %>
        </div>
      </div>

    <!-- Recent Activity -->
    <div class="dashboard-card">
      <div class="dashboard-card-header">
        <h3 class="dashboard-card-title">Recent Time Logs</h3>
      </div>
      <div class="recent-activity">
        <% if @recent_time_logs&.any? %>
          <% @recent_time_logs.limit(8).each do |log| %>
            <div class="activity-item">
              <div class="activity-header">
                <div class="activity-info">
                  <p class="activity-project">
                    <%= log.project.name %>
                  </p>
                  <p class="activity-description">
                    <%= log.description %>
                  </p>
                  <p class="activity-meta">
                    <%= log.user.display_name %> â€¢ <%= time_ago_in_words(log.created_at) %> ago
                  </p>
                </div>
                <div class="activity-duration">
                  <p class="activity-hours">
                    <%= (log.duration_minutes / 60.0).round(1) %>h
                  </p>
                  <p class="activity-revenue">
                    $<%= ((log.duration_minutes / 60.0) * log.hourly_rate).round(2) %>
                  </p>
                </div>
              </div>
            </div>
          <% end %>
        <% else %>
          <div class="empty-state">
            <p class="empty-state-description">No recent time logs found.</p>
            <%= link_to "Start your first timer", new_time_log_path,
                class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- System Admin Section -->
  <% if @current_user.system_admin? && @organizations %>
    <div class="admin-section">
      <div class="dashboard-card">
        <div class="dashboard-card-header">
          <h3 class="dashboard-card-title">Organizations Overview</h3>
        </div>

        <!-- Mobile message -->
        <div class="admin-mobile-message">
          <p>Organization details are best viewed on desktop. Please use a larger screen for the full table view.</p>
        </div>

        <!-- Desktop table -->
        <div class="admin-table-container">
          <table class="admin-table">
            <thead>
              <tr>
                <th>Organization</th>
                <th>Users</th>
                <th>Projects</th>
                <th>Total Hours</th>
                <th>Revenue</th>
              </tr>
            </thead>
            <tbody>
              <% @organizations.each do |org| %>
                <tr>
                  <td>
                    <%= link_to org.name, organization_path(org), class: "admin-table-link" %>
                  </td>
                  <td>
                    <%= org.users.count %>
                  </td>
                  <td>
                    <%= org.clients.sum { |c| c.projects.count } %>
                  </td>
                  <td>
                    <%= (org.total_hours / 60.0).round(1) %>h
                  </td>
                  <td class="admin-table-revenue">
                    $<%= number_with_delimiter(org.total_revenue.round(2)) %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  <% end %>
</div>