<div style="max-width: 80rem; margin: 0 auto; padding: 0 1.5rem;">
  <!-- Header -->
  <div style="margin-bottom: 2rem;">
    <div style="display: flex; justify-content: space-between; align-items: center;">
      <div>
        <h1 style="font-size: 2.5rem; font-weight: 700; color: var(--color-text-primary); margin: 0; font-family: var(--font-family-primary);">Time Logs</h1>
        <p style="margin-top: 0.75rem; color: var(--color-text-secondary); font-size: 1.125rem;">Track and manage your time entries</p>
      </div>
      <%= link_to new_time_log_path, class: "btn btn-primary", style: "display: flex; align-items: center; gap: 0.5rem;" do %>
        <%= lucide_icon "play", size: 16 %>
        Start New Timer
      <% end %>
    </div>
  </div>

  <!-- Stats -->
  <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 1.5rem; margin-bottom: 2rem;">
    <div class="card-compact">
      <div style="display: flex; align-items: center;">
        <div style="flex-shrink: 0;">
          <div style="width: 3rem; height: 3rem; background-color: var(--color-accent-primary); border-radius: var(--radius-xl); display: flex; align-items: center; justify-content: center; color: white;">
            <%= lucide_icon "clock", size: 24, class: "text-white" %>
          </div>
        </div>
        <div style="margin-left: 1.25rem; flex: 1;">
          <div style="font-size: 0.875rem; font-weight: 500; color: var(--color-text-secondary);">Total Hours</div>
          <div style="font-size: 1.25rem; font-weight: 700; color: var(--color-text-primary);"><%= @total_hours.round(1) %>h</div>
        </div>
      </div>
    </div>

    <div class="card-compact">
      <div style="display: flex; align-items: center;">
        <div style="flex-shrink: 0;">
          <div style="width: 3rem; height: 3rem; background-color: var(--color-success); border-radius: var(--radius-xl); display: flex; align-items: center; justify-content: center; color: white;">
            <%= lucide_icon "dollar-sign", size: 24, class: "text-white" %>
          </div>
        </div>
        <div style="margin-left: 1.25rem; flex: 1;">
          <div style="font-size: 0.875rem; font-weight: 500; color: var(--color-text-secondary);">Total Revenue</div>
          <div style="font-size: 1.25rem; font-weight: 700; color: var(--color-text-primary);">$<%= number_with_delimiter(@total_revenue.round(2)) %></div>
        </div>
      </div>
    </div>

    <div class="card-compact">
      <div style="display: flex; align-items: center;">
        <div style="flex-shrink: 0;">
          <div style="width: 3rem; height: 3rem; background-color: var(--color-accent-tertiary); border-radius: var(--radius-xl); display: flex; align-items: center; justify-content: center; color: white;">
            <%= lucide_icon "bar-chart-3", size: 24, class: "text-white" %>
          </div>
        </div>
        <div style="margin-left: 1.25rem; flex: 1;">
          <div style="font-size: 0.875rem; font-weight: 500; color: var(--color-text-secondary);">Total Entries</div>
          <div style="font-size: 1.25rem; font-weight: 700; color: var(--color-text-primary);"><%= @time_logs.total_count %></div>
        </div>
      </div>
    </div>
  </div>

  <!-- Time Logs Table -->
  <div class="card">
    <h3 style="font-size: 1.25rem; font-weight: 600; color: var(--color-text-primary); margin: 0 0 1.5rem 0;">Recent Time Logs</h3>

    <% if @time_logs.any? %>
      <div style="display: flex; flex-direction: column; gap: 1rem;">
        <% @time_logs.each do |time_log| %>
          <div class="surface-secondary" style="border: 1px solid var(--color-border-light); padding: 1rem; transition: box-shadow 0.2s ease;" onmouseover="this.style.boxShadow='var(--shadow-md)'" onmouseout="this.style.boxShadow='var(--shadow-sm)'">
            <div style="display: flex; align-items: center; justify-content: space-between;">
              <div style="flex: 1; min-width: 0;">
                <div style="display: flex; align-items: center; gap: 0.75rem;">
                  <div style="flex-shrink: 0;">
                    <% if time_log.running? %>
                      <div style="width: 0.75rem; height: 0.75rem; background-color: #10B981; border-radius: 50%; animation: pulse 2s infinite;"></div>
                    <% else %>
                      <div style="width: 0.75rem; height: 0.75rem; background-color: #D1D5DB; border-radius: 50%;"></div>
                    <% end %>
                  </div>
                  <div style="flex: 1; min-width: 0;">
                    <p style="font-size: 0.875rem; font-weight: 500; color: var(--color-text-primary); white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
                      <%= link_to time_log.project.name, project_path(time_log.project),
                          style: "color: var(--color-accent-primary); text-decoration: none;", onmouseover: "this.style.color='var(--color-accent-secondary)'", onmouseout: "this.style.color='var(--color-accent-primary)'" %>
                    </p>
                    <p style="font-size: 0.875rem; color: var(--color-text-secondary); white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
                      <%= time_log.description %>
                    </p>
                    <div style="display: flex; align-items: center; gap: 1rem; font-size: 0.75rem; color: var(--color-text-tertiary); margin-top: 0.25rem;">
                      <span><%= time_log.user.display_name %></span>
                      <span><%= time_ago_in_words(time_log.created_at) %> ago</span>
                      <% if time_log.issue %>
                        <span>Issue: <%= time_log.issue.title %></span>
                      <% end %>
                      <% if time_log.billable? %>
                        <span style="color: var(--color-success);">Billable</span>
                      <% else %>
                        <span style="color: var(--color-text-tertiary);">Non-billable</span>
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>

              <div style="display: flex; align-items: center; gap: 1rem;">
                <div style="text-align: right;">
                  <p style="font-size: 0.875rem; font-weight: 500; color: var(--color-text-primary);">
                    <% if time_log.running? %>
                      <span style="color: var(--color-success);">Running...</span>
                    <% else %>
                      <%= (time_log.duration_minutes / 60.0).round(1) %>h
                    <% end %>
                  </p>
                  <% unless time_log.running? %>
                    <p style="font-size: 0.75rem; color: var(--color-success);">
                      $<%= ((time_log.duration_minutes / 60.0) * time_log.hourly_rate).round(2) %>
                    </p>
                  <% end %>
                </div>

                <div style="display: flex; gap: 0.5rem;">
                  <% if time_log.running? %>
                    <%= link_to "Stop", stop_timer_time_log_path(time_log),
                        method: :patch,
                        style: "color: var(--color-error); font-size: 0.875rem; font-weight: 500; text-decoration: none;",
                        data: { turbo_method: :patch } %>
                  <% else %>
                    <%= link_to "View", time_log_path(time_log),
                        style: "color: var(--color-accent-primary); font-size: 0.875rem; font-weight: 500; text-decoration: none;", onmouseover: "this.style.color='var(--color-accent-secondary)'", onmouseout: "this.style.color='var(--color-accent-primary)'" %>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Pagination -->
      <div style="padding-top: 1.5rem; border-top: 1px solid var(--color-border-light);">
        <p style="font-size: 0.875rem; color: var(--color-text-tertiary);">
          Showing <%= @time_logs.count %> of <%= @time_logs.total_count %> time logs
        </p>
      </div>
    <% else %>
      <div style="text-align: center; padding: 3rem;">
        <div style="margin-bottom: 1rem; display: flex; justify-content: center;">
          <%= lucide_icon "clock", size: 48, style: "color: var(--color-text-tertiary);" %>
        </div>
        <h3 style="font-size: 1.25rem; font-weight: 600; color: var(--color-text-primary); margin: 0 0 0.5rem 0;">No time logs found</h3>
        <p style="color: var(--color-text-secondary); margin: 0 0 1.5rem 0;">Start tracking your time to see entries here.</p>
        <%= link_to "Start your first timer", new_time_log_path,
            class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
