<% content_for :title, "HourBench - Revolutionary Project Management Platform" %>
<% content_for :description, "Experience the future of project management with HourBench - featuring cutting-edge Rails 8 technology, AI-powered insights, and performance optimization tools that transform how teams work." %>

<!-- Animated Background -->
<div class="hero-background" data-controller="particles">
  <canvas data-particles-target="canvas" class="particles-canvas"></canvas>
</div>

<!-- Hero Section -->
<section class="hero-section" data-controller="hero-animations">
  <div class="container">
    <div class="hero-content">
      <!-- Animated Badge -->
      <div class="hero-badge" data-hero-animations-target="badge">
        <span class="badge-icon">üöÄ</span>
        <span class="badge-text">Powered by Rails 8.3 & Modern Stack</span>
        <span class="badge-pulse"></span>
      </div>

      <!-- Dynamic Typing Title -->
      <h1 class="hero-title" data-hero-animations-target="title">
        <span class="title-static">HourBench:</span>
        <span class="title-dynamic" data-controller="typing-effect"
              data-typing-effect-words-value='["Revolutionary Project Management", "Performance Optimization Hub", "Modern Development Platform", "Team Collaboration Suite", "Learning & Assessment Tool"]'
              data-typing-effect-target="text">Revolutionary Project Management</span>
      </h1>

      <!-- Enhanced Subtitle with Stats -->
      <div class="hero-subtitle-container" data-hero-animations-target="subtitle">
        <p class="hero-subtitle">
          Transform your development workflow with our cutting-edge platform featuring
          <strong>Rails 8.3</strong>, <strong>AI-powered insights</strong>, and
          <strong>real-time performance monitoring</strong>. Built for teams who demand excellence.
        </p>

        <!-- Live Stats Counter -->
        <div class="hero-stats" data-controller="stats-counter">
          <div class="stat-item">
            <span class="stat-number" data-stats-counter-target="counter" data-stats-counter-end-value="10000">0</span>
            <span class="stat-label">Projects Managed</span>
          </div>
          <div class="stat-item">
            <span class="stat-number" data-stats-counter-target="counter" data-stats-counter-end-value="50000">0</span>
            <span class="stat-label">Hours Tracked</span>
          </div>
          <div class="stat-item">
            <span class="stat-number" data-stats-counter-target="counter" data-stats-counter-end-value="99">0</span>
            <span class="stat-label">% Performance Score</span>
          </div>
        </div>
      </div>

      <!-- Enhanced Action Buttons -->
      <div class="hero-actions" data-hero-animations-target="actions">
        <!-- Simple test button first -->
        <a href="/session/new" class="btn btn-primary btn-large btn-glow" 
           onclick="console.log('Launch Demo clicked!'); return true;">
          <span class="btn-icon">‚ö°</span>
          <span class="btn-text">Launch Demo</span>
          <span class="btn-arrow">‚Üí</span>
        </a>
        
        <a href="#features" class="btn btn-secondary btn-large btn-glass" 
           data-controller="smooth-scroll" 
           data-action="click->smooth-scroll#scroll">
          <span class="btn-icon">üéØ</span>
          <span class="btn-text">Explore Features</span>
        </a>
        
        <!-- Simple test button for modal -->
        <button class="btn btn-tertiary btn-large" 
                onclick="console.log('Watch Demo clicked!'); document.getElementById('demo-video-modal').classList.remove('hidden'); document.getElementById('demo-video-modal').classList.add('show');">
          <span class="btn-icon">‚ñ∂Ô∏è</span>
          <span class="btn-text">Watch Demo</span>
        </button>
      </div>

      <!-- Interactive Feature Preview Cards -->
      <div class="hero-preview-cards" data-hero-animations-target="cards">
        <div class="preview-card" data-controller="card-3d" data-action="mousemove->card-3d#handleMouseMove mouseleave->card-3d#handleMouseLeave">
          <div class="card-content" data-card-3d-target="card">
            <div class="card-icon">üìä</div>
            <h3>Real-time Analytics</h3>
            <p>Live performance metrics and insights</p>
          </div>
        </div>

        <div class="preview-card" data-controller="card-3d" data-action="mousemove->card-3d#handleMouseMove mouseleave->card-3d#handleMouseLeave">
          <div class="card-content" data-card-3d-target="card">
            <div class="card-icon">ü§ñ</div>
            <h3>AI-Powered Optimization</h3>
            <p>Smart suggestions for performance improvements</p>
          </div>
        </div>

        <div class="preview-card" data-controller="card-3d" data-action="mousemove->card-3d#handleMouseMove mouseleave->card-3d#handleMouseLeave">
          <div class="card-content" data-card-3d-target="card">
            <div class="card-icon">‚ö°</div>
            <h3>Lightning Fast</h3>
            <p>Built on Rails 8 with Solid Stack performance</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Interactive Features Showcase -->
<section id="features" class="features-section" data-controller="intersection-observer">
  <div class="container">
    <!-- Section Header with Animation -->
    <div class="section-header" data-intersection-observer-target="element">
      <div class="section-badge">
        <span class="badge-icon">‚ú®</span>
        <span class="badge-text">Powerful Features</span>
      </div>
      <h2 class="section-title">
        Everything You Need to
        <span class="title-gradient">Supercharge Your Workflow</span>
      </h2>
      <p class="section-subtitle">
        Discover the comprehensive suite of tools designed to transform how your team manages projects,
        tracks performance, and delivers exceptional results.
      </p>
    </div>

    <!-- Feature Filter Tabs -->
    <div class="feature-tabs" data-controller="feature-tabs" data-intersection-observer-target="element">
      <button class="tab-button active" data-feature-tabs-target="tab" data-action="click->feature-tabs#switchTab" data-category="all">
        <span class="tab-icon">üéØ</span>
        <span class="tab-text">All Features</span>
      </button>
      <button class="tab-button" data-feature-tabs-target="tab" data-action="click->feature-tabs#switchTab" data-category="management">
        <span class="tab-icon">üìä</span>
        <span class="tab-text">Management</span>
      </button>
      <button class="tab-button" data-feature-tabs-target="tab" data-action="click->feature-tabs#switchTab" data-category="performance">
        <span class="tab-icon">‚ö°</span>
        <span class="tab-text">Performance</span>
      </button>
      <button class="tab-button" data-feature-tabs-target="tab" data-action="click->feature-tabs#switchTab" data-category="collaboration">
        <span class="tab-icon">üë•</span>
        <span class="tab-text">Collaboration</span>
      </button>
    </div>

    <!-- Enhanced Features Grid -->
    <div class="features-grid" data-controller="features-showcase" data-feature-tabs-target="grid" data-intersection-observer-target="element">
      <% @features.each_with_index do |feature, index| %>
        <div class="feature-card enhanced"
             data-features-showcase-target="card"
             data-action="mouseenter->features-showcase#highlight mouseleave->features-showcase#unhighlight click->features-showcase#showDetails"
             data-category="<%= feature[:category] || 'management' %>"
             data-index="<%= index %>">

          <!-- Card Background Effects -->
          <div class="card-background">
            <div class="card-gradient"></div>
            <div class="card-pattern"></div>
          </div>

          <!-- Card Content -->
          <div class="card-content">
            <div class="feature-icon-container">
              <div class="icon-background"></div>
              <i data-lucide="<%= feature[:icon] %>" class="feature-icon"></i>
              <div class="icon-pulse"></div>
            </div>

            <div class="feature-text">
              <h3 class="feature-title"><%= feature[:title] %></h3>
              <p class="feature-description"><%= feature[:description] %></p>

              <!-- Feature Benefits -->
              <% if feature[:benefits] %>
                <ul class="feature-benefits">
                  <% feature[:benefits].first(2).each do |benefit| %>
                    <li class="benefit-item">
                      <span class="benefit-icon">‚úì</span>
                      <span class="benefit-text"><%= benefit %></span>
                    </li>
                  <% end %>
                </ul>
              <% end %>
            </div>

            <!-- Interactive Elements -->
            <div class="card-footer">
              <button class="feature-cta" data-action="click->features-showcase#showDemo" data-feature="<%= feature[:title].parameterize %>">
                <span class="cta-text">Try Feature</span>
                <span class="cta-arrow">‚Üí</span>
              </button>

              <div class="feature-stats">
                <span class="stat-value"><%= feature[:usage] || "#{rand(80..99)}%" %></span>
                <span class="stat-label">User Satisfaction</span>
              </div>
            </div>
          </div>

          <!-- Hover Effects -->
          <div class="card-hover-effects">
            <div class="hover-glow"></div>
            <div class="hover-particles"></div>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Feature Details Modal -->
    <div class="feature-modal hidden" data-features-showcase-target="modal" data-controller="modal">
      <div class="modal-backdrop" data-action="click->modal#close"></div>
      <div class="modal-content">
        <div class="modal-header">
          <h3 class="modal-title" data-features-showcase-target="modalTitle">Feature Details</h3>
          <button class="modal-close" data-action="click->modal#close">
            <i data-lucide="x"></i>
          </button>
        </div>
        <div class="modal-body" data-features-showcase-target="modalBody">
          <!-- Dynamic content will be loaded here -->
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Use Cases Section -->
<section class="use-cases-section">
  <div class="container">
    <h2 class="section-title">Perfect For Different Audiences</h2>
    <div class="use-cases-grid">
      <% @use_cases.each do |use_case| %>
        <div class="use-case-card">
          <div class="use-case-header">
            <div class="use-case-icon">
              <i data-lucide="<%= use_case[:icon] %>"></i>
            </div>
            <h3 class="use-case-title"><%= use_case[:title] %></h3>
          </div>
          <p class="use-case-description"><%= use_case[:description] %></p>
          <ul class="use-case-benefits">
            <% use_case[:benefits].each do |benefit| %>
              <li><%= benefit %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    </div>
  </div>
</section>

<!-- Tech Stack Section -->
<section class="tech-stack-section">
  <div class="container">
    <h2 class="section-title">Modern Technology Stack</h2>
    <div class="tech-stack-grid">
      <% @tech_stack.each do |category| %>
        <div class="tech-category-card">
          <h3 class="tech-category-title"><%= category[:category] %></h3>
          <div class="tech-list">
            <% category[:technologies].each do |tech| %>
              <div class="tech-item">
                <div class="tech-name"><%= tech[:name] %></div>
                <div class="tech-description"><%= tech[:description] %></div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>

<!-- Demo Access Section -->
<section class="demo-section">
  <div class="container">
    <h2 class="section-title">Try the Demo</h2>
    <p class="demo-intro">
      Access the application with different user roles to explore various features and capabilities.
      <br><strong>Password for all accounts:</strong> <code class="demo-password">password123</code>
    </p>
    <div class="demo-grid">
      <% @demo_users.each do |user| %>
        <div class="demo-card">
          <div class="demo-role"><%= user[:role] %></div>
          <div class="demo-email"><%= user[:email] %></div>
          <div class="demo-description"><%= user[:description] %></div>
        </div>
      <% end %>
    </div>
    <div class="demo-cta">
      <%= link_to "Start Demo", new_session_path, class: "btn btn-primary btn-large" %>
    </div>
  </div>
</section>

<!-- Call to Action Section -->
<section class="cta-section">
  <div class="container">
    <div class="cta-content">
      <h2 class="cta-title">Ready to Explore?</h2>
      <p class="cta-subtitle">
        Dive into a real-world Rails application with intentional performance challenges, 
        modern features, and comprehensive learning opportunities.
      </p>
      <div class="cta-actions">
        <%= link_to "Try Demo", new_session_path, class: "btn btn-primary btn-large" %>
        <%= link_to "View Features", features_path, class: "btn btn-secondary btn-large" %>
      </div>
    </div>
  </div>
</section>

